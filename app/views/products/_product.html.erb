<div class="col-xs-6 col-sm-3 product-loop">
  <h3><%= product.name %></h3>
  <%= image_tag(product.image_url, class: "img-responsive") %>
  <p><%= product.description %></p>
  <p><strong>Colour: </strong><%= product.colour %></p>
  <p><strong>$<%= product.price %></strong></p>
  <p><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>