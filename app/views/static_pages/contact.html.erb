<div class="contact-page">
	<h1>Contact Us</h1>
	<p>Talk to us to let us know which accessories you'd like!</p>
	<%= flash[:notice] %>
	<div class="contact-and-submit">
		<%= form_tag("/static_pages/thank_you") do %>
		<div class="row">
		  <div class="form-group col-md-6">
		    <%= label_tag :name %>
		    <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
		  </div>      
	    <div class="form-group col-md-6">
	      <%= label_tag :email, "Email Address" %>
	      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
	    </div>
	  </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "form-control message-box", placeholder: "Enter Message" %>
    </div>      
		<%= submit_tag "Send" %>   
		<% end %>
	</div>
</div>
